@colossus_scale = 24

entity = {
	name = "mindwarden_01_colossus_entity"
	pdxmesh = "avian_01_colossus_frame_mesh"

	default_state = "idle"
	state = { name = "idle" animation = "idle" }
	state = { name = "moving" animation = "idle" }
	state = { name = "working" animation = "idle" }
	state = { name = "death" animation = "closed_death" looping = no
		event = { time = 13.2 node = "frame_ship" particle = "dreadnought_explosion_particle" sound = { soundeffect = ship_destroyed } }
		chance = {
			if_current_state = {
				"idle" = 100
				"moving" = 100
				"death" = 0
				"working" = 0
			}
		}
	}
	state = { name = "death" animation = "opened_death" looping = no
		event = { time = 12.0 node = "frame_ship" particle = "dreadnought_explosion_particle" sound = { soundeffect = ship_destroyed } }
		chance = {
			if_current_state = {
				"idle" = 0
				"moving" = 0
				"death" = 0
				"working" = 100
			}
		}
	}

	game_data = {
		size = @colossus_scale
	}
}

entity = {
	name = "mindwarden_01_colossus_ship_entity"
	pdxmesh = "mindwarden_01_colossus_mesh"

	default_state = "idle"
	# Actual idle state when being in idle/moving.
	state = { name = "idle" animation = "idle" looping = no next_state = "idle" animation_blend_time = 5
		chance = {
			if_current_state = {
				"idle" = 100
				"moving" = 100
				"death" = 0
				"working" = 100
				"working_looping" = 0
			}
		}
		event = { time = 0 node = "light_locator_01" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_02" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_03" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_04" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }

		event = { time = 0 node = "large_engine_01" particle = "generic_1_25_exhaust_line_idle" keep_particle = yes trigger_once = yes }

		start_event = { trigger_once = yes sound = { soundeffect = mw_ship_colossus_idle } }
	}
	# Idle state when going from opened state to idle.
	state = { name = "idle" animation = "closing" looping = no next_state = "idle"
		chance = {
			if_current_state = {
				"idle" = 0
				"moving" = 0
				"death" = 0
				"working" = 100
				"working_looping" = 100
			}
		}
		propagate_state = { effect = "idle_closing" }
		event = { time = 0 node = "light_locator_01" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_02" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_03" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_04" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }

		event = { time = 0 node = "large_engine_01" particle = "generic_2_exhaust_line_moving" keep_particle = yes trigger_once = yes }

		event = { time = 0.033 trigger_once = yes sound = { soundeffect = mw_ship_colossus_closing_01 stop_on_state_change = yes } }
		event = { time = 6.973 trigger_once = yes sound = { soundeffect = mw_ship_colossus_closing_02 } }
	}
	# Actual moving state if going from idle/moving.
	state = { name = "moving" animation = "idle" looping = yes next_state = "moving"
		chance = {
			if_current_state = {
				"idle" = 100
				"moving" = 100
				"death" = 0
				"working" = 100
				"working_looping" = 0
			}
		}
		event = { trigger_once = yes sound = { soundeffect = "moving_out_colossus" } }

		event = { time = 0 node = "light_locator_01" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_02" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_03" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_04" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }

		event = { time = 0 node = "large_engine_01" particle = "generic_2_exhaust_line_moving" keep_particle = yes trigger_once = yes }

		start_event = { trigger_once = yes sound = { soundeffect = mw_ship_colossus_move } }
	}
	# Moving state if going from open/working, uses closing animation.
	state = { name = "moving" animation = "closing" looping = no animation_speed = 3 next_state = "moving"
		chance = {
			if_current_state = {
				"idle" = 0
				"moving" = 0
				"death" = 0
				"working" = 0
				"working_looping" = 100
			}
		}
		propagate_state = { effect = "moving_closing" }
		event = { time = 0 node = "light_locator_01" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_02" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_03" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_04" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }

		event = { time = 0 node = "large_engine_01" particle = "generic_2_exhaust_line_moving" keep_particle = yes trigger_once = yes }

		event = { time = 0.033 trigger_once = yes sound = { soundeffect = mw_ship_colossus_closing_01 stop_on_state_change = yes } }
		event = { time = 6.973 trigger_once = yes sound = { soundeffect = mw_ship_colossus_closing_02 } }
	}
	# Opened state, going after "kill_planet".
	state = { name = "working_looping" animation = "open"
		event = { time = 0	id = "beam_start" }

		event = { time = 0 node = "light_locator_01" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_02" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_03" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_04" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }

		event = { time = 0 node = "large_engine_01" particle = "generic_1_25_exhaust_line_idle" keep_particle = yes trigger_once = yes }

		start_event = { trigger_once = yes sound = { soundeffect = mw_ship_colossus_idle } }
	}
	# Opening state, goes into "working_looping" state when done.
	state = { name = "working" animation = "opening" looping = no next_state = "working_looping"
		event = { time = 1000 id = "beam_start" } #will never fire, but lets the game know that an event with this ID exists

		event = { time = 0 node = "light_locator_01" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_02" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_03" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		event = { time = 0 node = "light_locator_04" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }

		event = { time = 0 node = "large_engine_01" particle = "generic_2_exhaust_line_moving" keep_particle = yes trigger_once = yes }

		event = { time = 0.033 trigger_once = yes sound = { soundeffect = mw_ship_colossus_open_01 stop_on_state_change = yes } }
		event = { time = 5.611 trigger_once = yes sound = { soundeffect = mw_ship_colossus_open_02 stop_on_state_change = yes } }
		event = { time = 15.091 trigger_once = yes sound = { soundeffect = mw_ship_colossus_open_03 stop_on_state_change = yes } }
	}
	# Closed death state.
	state = { name = "death" animation = "idle_death" looping = no
		chance = {
			if_current_state = {
				"idle" = 100
				"moving" = 100
				"death" = 0
				"working" = 0
				"working_looping" = 0
			}
		}
		propagate_state = { effect = "death_idle" }
		event = { time = 0.0 node = "explosion_locator_01" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 1.0 node = "explosion_locator_02" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 1.2 node = "explosion_locator_03" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 3.0 node = "explosion_locator_04" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 4.0 node = "explosion_locator_05" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 4.4 node = "explosion_locator_06" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 5.2 node = "explosion_locator_07" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 6.8 node = "explosion_locator_08" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 7.4 node = "explosion_locator_09" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 8.0 node = "explosion_locator_10" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 9.0 node = "explosion_locator_11" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 12.0 node = "explosion_locator_12" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
	}
	# Opened death state.
	state = { name = "death" animation = "opened_death" looping = no animation_blend_time = 2
		chance = {
			if_current_state = {
				"idle" = 0
				"moving" = 0
				"death" = 0
				"working" = 100
				"working_looping" = 100
			}
		}
		propagate_state = { effect = "death_open" }
		event = { time = 0.0 node = "explosion_locator_01" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 1.0 node = "explosion_locator_02" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 1.2 node = "explosion_locator_03" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 3.0 node = "explosion_locator_04" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 4.0 node = "explosion_locator_05" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 4.4 node = "explosion_locator_06" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 5.2 node = "explosion_locator_07" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 6.8 node = "explosion_locator_08" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 7.4 node = "explosion_locator_09" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 8.0 node = "explosion_locator_10" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 9.0 node = "explosion_locator_11" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
		event = { time = 12.0 node = "explosion_locator_12" particle = "ship_explosion_particle" sound = { soundeffect = "ship_destroyed" } keep_particle = yes trigger_once = yes }
	}

	locator = { name = "main" }
	attach = { name = effect "main" = "mindwarden_01_colossus_effect_clouds_entity" }
	attach = { name = effect "main" = "mindwarden_01_colossus_effect_ion_entity" }
	attach = { name = effect "main" = "mindwarden_01_colossus_effect_thunder_entity" }
}

